<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="restaurantPU">

        <!-- Providerul JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.tema2.model.Product</class>
        <class>org.example.tema2.model.Drink</class>
        <class>org.example.tema2.model.Food</class>
        <class>org.example.tema2.structure.Menu</class>

        <properties>
            <!-- 1. Detaliile de conectare la PostgreSQL -->
            <!-- Baza de date "restaurant_db" trebuie creata manual inainte! -->

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/mip_restaurant"/>

            <property name="jakarta.persistence.jdbc.user"
                      value="postgres"/>
            <property name="jakarta.persistence.jdbc.password"
            value="1q2w3e"/>
            <property name="jakarta.persistence.jdbc.driver"
            value="org.postgresql.Driver"/>
            <!-- 2. Configurare Hibernate -->
            <!-- Afiseaza SQL-ul generat in consola (util pentru debug) -->
            <property name="hibernate.show_sql" value="true"/>
            <!-- Formateaza SQL-ul frumos -->
            <property name="hibernate.format_sql" value="true"/>
            <!-- 3. Strategia de gestionare a schemei -->
            <!-- "update": Creeaza tabelele daca nu exista, sau le actualizeaza -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>


    </persistence-unit>
</persistence>